apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: meme-app
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/jossydee1/DevOps-Project1_Kube_manifest
    path: manifest
    targetRevision: main
    directory:
      recurse: true
  destination:
    server: https://kubernetes.default.svc
    namespace: my-app
  syncPolicy:
    syncOptions:
    - CreateNamespace=true
    automated:
      prune: true
      selfHeal: true
